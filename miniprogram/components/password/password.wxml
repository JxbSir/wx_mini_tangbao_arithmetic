<modal model:show="{{show}}">
    <view class="box">
        <view class="header h-center">
            家长控制
        </view>
        <view class="input-box">
            <input id="input" password="true" type="digit" placeholder="请输入密码" placeholder-class="input" bindinput="bindinput"></input>
            <view style="font-size:9px; color:#888;margin-top: 10px;">首次输入密码会自动保存更新</view>
        </view>
        <view class="opt h-center">
            <view class="opt-submit h-center" bindtap="onSubmit">确定</view>
        </view>
    </view>
</modal>