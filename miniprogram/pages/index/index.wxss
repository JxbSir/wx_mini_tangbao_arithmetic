page {

    margin-top: 0px;
    margin-right: 0px;
    margin-bottom: 0px;
    margin-left: 0px;
    background: #b3eaed;
    background-image: url('https://alifei04.cfp.cn/creative/vcg/nowarter800/new/VCG211125817153.jpg?x-oss-process=image/format,webp');
    background-repeat: no-repeat;

    background-position: center;
    background-attachment: fixed;
}

.main {
    position: relative;
    width: 100vw;
    height: 100vh;
}

.header-opt {
    height: 40px;
    padding-top: 50px;
}

.rule {
    position: absolute;
    left: 0;
    margin-left: 20px;
    color: rgb(49, 88, 67);
}

.footer-opt {
    position: absolute;
    width: 100%;
    height: 140px;
    bottom: 0;
}

.start {
    background: linear-gradient(to right, rgb(250, 48, 98), rgb(207, 76, 240));
    width: 150px;
    height: 60px;
    color: white;
    font-size: 20px;
    font-weight: bolder;
    border-radius: 30px;
}
